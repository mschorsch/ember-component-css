{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noEmit": true,
    "outDir": "../js",
    "baseUrl": ".",
    "typeRoots": [
      "../node_modules/@types",
      "types"
    ],
    "esModuleInterop": true,
    "paths": {
      "broccoli-plugin": [
        "../node_modules/broccoli-plugin/dist"
      ],
      "broccoli-plugin/*": [
        "../node_modules/broccoli-plugin/dist/*"
      ]
    }
  }
}
